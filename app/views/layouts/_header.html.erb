<header class="fixed-top navbar-dark bg-dark shadow">

  <div>
    <nav class="navbar navbar-expand-sm">
      <div class ="navbar-header"> 
        <%= link_to posts_path, class: "text-light" do %>
        LOGO
          <% end %>
      </div>

      <div class= "container mx-auto">
        <div class= "row mx-auto">
          <div class= "col-auto">
            <%= link_to posts_path, class: "text-light nav-link font-raleway" do %>
              <i class="fas fa-home fa-2x"></i> Timeline
            <% end %>
          </div>

          <div class= "col-auto">
            <%= link_to users_path, class: "text-light nav-link font-raleway" do %>
              <i class="fas fa-users fa-2x"></i> Add Friends
            <% end %>
          </div>
        </div>
      </div>

      
        <% if user_signed_in? %>
          <div class="mr-5">
          
              <%= link_to "My Profile", user_path(current_user), class: "text-white font-raleway" %> ||
              <%= link_to "Log out", destroy_user_session_path, class: "text-white font-raleway", method: :delete %>
            </div>
          
        <% end %>
      
    </nav>
  </div>
</header>

<% if user_signed_in? %>
  <%= render 'shared/notifications', object: current_user.notifications%>
<%end%>